//calculate simple interest for any given principle amount//

#include<stdio.h>

int main() {

    float p;
    printf("enter principle amount");
    scanf("%f", &p);

    float r;
    printf("enter rate");
    scanf("%f", &r);

    float t;
    printf("enter time");
    scanf("%f", &t);

    printf("the simple interest for the given principle amount is %f", (p*r*t)/100); 

    return 0;
}
