// a program to convert any given temperature in fahrenheit to celsius

#include<stdio.h>

float temperature(float fahrenheit);

int main(void){
    float fahrenheit;
    printf("enter temperature: ");
    scanf("%f", &fahrenheit);

    printf("%f in fahrenhiet = %f in celsius", fahrenheit, temperature(fahrenheit) );
}

float temperature(float fahrenheit){
    float celsius;
    celsius= (fahrenheit - 32) * (5.0/9.0);
    return celsius;
}
