//  a program to count the number of odd number in an array

#include<stdio.h>

int countodd (int oddarr[], int n);

int main(void){
    int oddarr[6];
    printf("enter the first index: ");
    scanf("%d", &oddarr[0]);
    printf("enter the second index: ");
    scanf("%d", &oddarr[1]);
    printf("enter the third index: ");
    scanf("%d", &oddarr[2]);
    printf("enter the fourth index: ");
    scanf("%d", &oddarr[3]);
    printf("enter the fifth index: ");
    scanf("%d", &oddarr[4]);
    printf("enter the sixth index: ");
    scanf("%d", &oddarr[5]);

    printf("there are %d odd numbers in the array", countodd(oddarr, 6));
}

int countodd (int oddarr[], int n ){
    int count = 0;
    for (int i = 0; i < n; i++){
        if (oddarr[i] %2 != 0){
            count++;
        }
    }
    return count;
}
