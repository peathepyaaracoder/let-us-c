// a program to find the square root of a number
/*im aware that there's already a function in the math.h header file for finding the square root of a number however the question required us 
to not use the sqrt funtion*/

#include<stdio.h>
#include<math.h>

int sqroot(int n);

int main(void){
    int n;

    printf("enter a number: ");
    scanf("%d", &n);

    printf("square root of %d is %d", n, sqroot(n));
} 

int sqroot(int n){
    int i;
    for(i=1; i<= n/2; i++){
        if(i == n/i){
            break;
        }
    }   
    return i;
}
