#include <stdio.h>

int main() {
    float temperature;                                          // temperature in Kelvin
    printf("Enter temperature in Kelvin: ");
    scanf("%f", &temperature);

    // Conversion formula: Celsius = Kelvin - 273.15
    float celsius = temperature - 273.15;

    printf("Temperature in degree Celsius is %f\n", celsius);
    return 0;
}
